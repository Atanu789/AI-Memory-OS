{
  "name": "ai-memory-os",
  "version": "1.0.0",
  "description": "AI Memory OS",
  "main": "dist/app/main/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "vite build",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "nodemon --watch app/main --exec \"tsc && electron .\"",
    "dev:renderer": "vite"
  },
  "dependencies": {
    "electron": "^40.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "zustand": "^5.0.2",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.468.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "nodemon": "^3.1.11",
    "@types/node": "^25.0.9",
    "@types/electron": "^1.4.38",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "vite": "^6.0.7",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2"
  }
}
